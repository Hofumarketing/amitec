<section class="pt-28  bg-emerald ">
    <div class="max-w-[1440px] w-full flex  mx-auto" >
        <div class="w-[423px] text-white text-base font-normal font-['Gilroy'] leading-snug">
            <h2 class="text-neutral-900 text-[40px] text-white font-bold font-['Gilroy'] leading-10" > Aktualności</h2>
            <Paragraph type="white"> Garść informacji o nowych projektach + wysokokaloryczne porcje wiedzy z naszego blogu.</Paragraph>
        </div>

    </div>
    <div class="wrapper  max-w-[1440px] w-full mx-auto mt-16">
        <div class="splide" id="splide4">
            <div class="splide__track">
                <div class="splide__arrows  absolute   z-[50] w-1/3  left-1/2 -translate-x-1/2 bottom-10">
                    <button class="splide__arrow bg-transparent right-1/3 splide__arrow--next ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="38" height="35" viewBox="0 0 38 35" fill="none">
                            <rect x="37.5342" y="17.4863" width="1.37389" height="24.73" transform="rotate(135 37.5342 17.4863)" fill="#141414"/>
                            <rect x="36.5625" y="16.5137" width="1.37389" height="24.73" transform="rotate(45 36.5625 16.5137)" fill="#141414"/>
                            <rect x="36.3613" y="17.2852" width="1.37389" height="35.8614" transform="rotate(90 36.3613 17.2852)" fill="#141414"/>
                        </svg>
                    </button>

                    <button class="splide__arrow bg-transparent left-1/3 splide__arrow--prev ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="38" height="35" viewBox="0 0 38 35" fill="#fff">
                            <rect x="37.5342" y="17.4863" width="1.37389" height="24.73" transform="rotate(135 37.5342 17.4863)" fill="#141414"/>
                            <rect x="36.5625" y="16.5137" width="1.37389" height="24.73" transform="rotate(45 36.5625 16.5137)" fill="#141414"/>
                            <rect x="36.3613" y="17.2852" width="1.37389" height="35.8614" transform="rotate(90 36.3613 17.2852)" fill="#141414"/>
                        </svg>
                    </button>

                </div>
                <ul class="splide__list">
                    {aktualnosci.map((slide, index) => (
                            <div class="splide__slide h-[700px]">
                                <div class="image-container  mr-5">

                                    <div class="w-full bg-center   bg-center bg-no-repeat bg-cover pt-[75%]" style={{ backgroundImage: `url(${slide.image})` }}>
                                        {/* Dodatkowa zawartość slajdu */}
                                    </div>
                                    <h3 class="text-white text-xl mt-10  font-bold font-['Gilroy'] leading-tight"> {slide.title}</h3>
                                    <div class="w-5/6">
                                        <Paragraph type="white">{slide.description}  </Paragraph>
                                    </div>
                                    <div class="flex items-center">
                                        <Buttonunderline type="primary"> Czytaj więcej</Buttonunderline>
                                    </div>

                                </div>


                            </div>
                    ))}

                </ul>

            </div>
        </div>
    </div>
</section>


