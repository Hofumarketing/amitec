---

interface Props {
    type: 'primary' | 'white';
}

const { type } = Astro.props

function btnClasses(type) {
    switch (type) {
        case 'white':
            return 'bg-white hover:bg-black text-black hover:text-white';
        case 'primary':
            return 'bg-red-500';
    }
}

const classes = ['transition-all ease-in-out duration-300 px-12 py-2 rounded-full', btnClasses(type)];
---

<button class:list={classes}>
    <slot />
</button>