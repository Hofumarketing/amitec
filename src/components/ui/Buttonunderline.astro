---

interface Props {
    type: 'primary' | 'white';
}

const { type } = Astro.props

function btnClasses(type) {
    switch (type) {
        case 'white-underline':
            return 'bg-transparent text-black underline mt-4 decoration-orange decoration-solid hover:text-white';
        case 'primary':
            return 'bg-red-500';

    }
}

const classes = ['transition-all ease-in-out duration-300', btnClasses(type)];
---

<button class:list={classes}>
    <slot />
</button>