import Button from "./Button.astro";
const partners = [
    {
        id: 0,
        image: 'src/assets/IMG/partners/11.jpg',

    },
    {
        id: 1,
        image: 'src/assets/IMG/partners/12.jpg',

    },
    {
        id: 2,
        image: 'src/assets/IMG/partners/13.jpg',

    },
    {
        id: 3,
        image: 'src/assets/IMG/partners/14.jpg',

    },
];

---


<section class="pt-28  p bg-opacity-20  ">
    <div class="max-w-[1440px] w-full flex justify-center mx-auto" >
        <div class="w-[423px] text-center text-black text-base font-normal font-['Gilroy'] leading-snug">
            <h2 class="text-neutral-900 text-[40px] font-bold font-['Gilroy'] leading-10" > Nasi partnerzy</h2>
            <p class="mt-8 text-neutral-900 text-base font-normal font-['Gilroy'] leading-snug">Współpracujemy z najlepszymi na rynku. Wierzymy, że relacje oparte na wzajemnym zaufaniu i szacunku dają najlepsze zbiory.</p>
        </div>

    </div>
    <div class="wrapper  max-w-[1440px] w-full  mx-auto mt-16">
        <div class="splide " id="splide2">
            <div class="splide__track">
                <div class="splide__arrows  absolute  z-[50] w-1/3  left-1/2 -translate-x-1/2 bottom-10">
                    <button class="splide__arrow bg-transparent right-1/3 splide__arrow--next ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="38" height="35" viewBox="0 0 38 35" fill="none">
                            <rect x="37.5342" y="17.4863" width="1.37389" height="24.73" transform="rotate(135 37.5342 17.4863)" fill="#141414"/>
                            <rect x="36.5625" y="16.5137" width="1.37389" height="24.73" transform="rotate(45 36.5625 16.5137)" fill="#141414"/>
                            <rect x="36.3613" y="17.2852" width="1.37389" height="35.8614" transform="rotate(90 36.3613 17.2852)" fill="#141414"/>
                        </svg>
                    </button>

                    <button class="splide__arrow bg-transparent left-1/3 splide__arrow--prev ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="38" height="35" viewBox="0 0 38 35" fill="none">
                            <rect x="37.5342" y="17.4863" width="1.37389" height="24.73" transform="rotate(135 37.5342 17.4863)" fill="#141414"/>
                            <rect x="36.5625" y="16.5137" width="1.37389" height="24.73" transform="rotate(45 36.5625 16.5137)" fill="#141414"/>
                            <rect x="36.3613" y="17.2852" width="1.37389" height="35.8614" transform="rotate(90 36.3613 17.2852)" fill="#141414"/>
                        </svg>
                    </button>

                </div>
                <ul class="splide__list">
                    {partners.map((slide, index) => (
                            <div class="splide__slide h-[200px] w-3/4 ">
                                  <div class="image-container h-[10] w-2/3">
                                      <img src={slide.image} alt={slide.alt}/>

                                  </div>


                            </div>
                    ))}

                    </ul>

                    </div>
                    </div>
    </div>
</section>

