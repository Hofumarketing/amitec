---
import Button from "../ui/Button.astro";
import Buttonunderline from "../ui/Buttonunderline.astro";


const products = [
    {
        id: 0,
        title: 'Sprostamy każdemu wyzwaniu',
        image: 'public/img/a1.svg',
        description: 'Współpracujemy zarówno z indywidualnymi inwestorami, jak i z deweloperami i generalnymi wykonawcami. Zaopatrujemy w produkty styropianowe także branżę meblarską i RTV/AGD. Zrealizujemy każdy typ zamówienia, w dowolnych ilościach.'

    },
    {
        id: 1,
        title: 'Działamy od fundamentów po dach',
        image: 'public/img/a2.svg',
        description: 'Mamy szeroką ofertę wysokiej jakości produktów termoizolacyjnych, dostosowanych do różnorodnych potrzeb budowlanych i budżetowych. Dostarczymy każde zamówienie na dowolny adres w Polsce i Europie.'


    },
    {
        id: 2,
        title: 'Spełniamy najwyższe normy jakości',
        image: 'public/img/a3.svg',
        description: 'Stawiamy na ekologiczne rozwiązania i bezpieczeństwo produkcyjne. Nasze zakłady korzystają z odnawialnych źródeł energii (OZE). Posiadamy również certyfikacje Urzędu Dozoru Technicznego (UDT), co potwierdza nasze najwyższe standardy jakości.'

    },


];


---


<section id="" class="bg-[#e9e9e9]">
    <div class="w-full flex justify-center flex-wrap p-6 lg:p-12 mx-auto max-w-[1400px]">
        <div class="flex-initial w-full flex  text-5 font-light leading-9" >
            <h2 class="text-[#2e2e2e] text-3xl font-medium font-['Objectivity'] leading-10"> Wszystko, co ważne dla Twojej inwestycji</h2>
        </div>
        <div class="w-full flex flex-wrap flex-auto pt-12 mx-auto max-w-[1400px]">
            <div class="flex w-full pr-4 flex-wrap " >
                {products.map((slide, index) => (
                        <div class="w-full lg:w-1/3 flex flex-wrap p-1  ">
                            <div class="lg:p-4  text-black">
                                <div class="bg-left  bg-no-repeat pt-[15%]  bg-contain w-full" style={{ backgroundImage: `url(${slide.image})` }}>
                                    {/* Dodatkowa zawartość slajdu */}
                                </div>
                                <div class="bg-left underline-offset-8 border-b border-red-500 bg-no-repeat pt-[5%]  bg-contain w-full">
                                    {/* Dodatkowa zawartość slajdu */}
                                </div>
                                <h2 class="text-black pt-4 text-xl normal leading-snug"> {slide.title}</h2>
                                <p class="font-light text-sm pt-3 text-[#A3A3A3]">{slide.description} </p>

                            </div>

                        </div>

                ))}
            </div>

            <div>

            </div>
        </div>
    </div>

</section>
