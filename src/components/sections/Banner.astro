<section class="w-full flex flex-wrap  mx-auto xl:m-28 bg-orange bg-opacity-20 max-w-[1400px] ">
    <div class="flex-initial w-full xl:w-1/3 relative" >
        <img class="w-full" src="src/assets/IMG/image 16.jpg">
        <img class="absolute w-[400px] mx-auto left-0 right-0 -translate-y-1/2 md:translate-x-1/2 -bottom-1/2 md:-bottom-1/4  md:mx-0 lg:left:1/2 lg:translate-x-1/2 xl:top-1/2 xl:-translate-y-1/2  xl:-right:1/2 xl:translate-x-1/2 md:-translate-y-1/4 "  src="src/assets/IMG/image 16.jpg">
