                            <rect x="36.5625" y="16.5137" width="1.37389" height="24.73" transform="rotate(45 36.5625 16.5137)" fill="#141414"/>
                            <rect x="36.3613" y="17.2852" width="1.37389" height="35.8614" transform="rotate(90 36.3613 17.2852)" fill="#141414"/>
                        </svg>
                    </button>

                    <button class="splide__arrow bg-transparent left-1/3 splide__arrow--prev ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="38" height="35" viewBox="0 0 38 35" fill="none">
                            <rect x="37.5342" y="17.4863" width="1.37389" height="24.73" transform="rotate(135 37.5342 17.4863)" fill="#141414"/>
                            <rect x="36.5625" y="16.5137" width="1.37389" height="24.73" transform="rotate(45 36.5625 16.5137)" fill="#141414"/>
                            <rect x="36.3613" y="17.2852" width="1.37389" height="35.8614" transform="rotate(90 36.3613 17.2852)" fill="#141414"/>
                        </svg>
                    </button>

                </div>
                <ul class="splide__list">
                    {aktualnosci.map((slide, index) => (
                            <div class="splide__slide h-[700px] p-10">
                                <div class="image-container bg-white p-10 ">
                                    <div class="flex items-center">
                                        <img class="w-[70px] h-[70px]  rounded-full" src={slide.image} alt={slide.alt}/>
                                    </div>
                                    <h3 class="pt-[24px] text-black text-xl font-bold font-['Gilroy'] leading-tight">{slide.name}</h3>
                                    <Paragraph type="light">{slide.description}  </Paragraph>
                                    <Signature></Signature>

                                </div>


                            </div>
                    ))}

                </ul>

            </div>
        </div>
    </div>
</section>

