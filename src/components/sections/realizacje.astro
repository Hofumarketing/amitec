---


<section class="bg-[#1e1e1e]">
    <div class="w-full justify-center p-6 lg:p-12 mx-auto relative">
        <div id="splide2" class="splide">
            <div class="splide__track">
                <ul class="splide__list ">
                    {realizacje.map((slide, index) => (
                            <div class="splide__slide group bg-no-repeat bg-center bg-cover h-[100vw] lg:h-fit lg:aspect-square" style={{ backgroundImage: `url(${slide.image})` }}>
                                <div class="bg-black/50  flex items-end group-hover:bg-black/40 group-hover:cursor-pointer transition-all duration-300 ease-in h-full w-full justify-center p-12">
                                    <div class=" ">
                                        <h1 class="lg:w-[400px] text-neutral-900 mb-6 text-[40px] lg:text-[34px] text-white font-medium leading-tight">
                                            {slide.title}</h1>
                                        <p class=" lg:w-[400px] mb-6 text-neutral-900 text-white font-light leading-tight">
                                            {slide.short}</p>
                                        <div class="">
                                            <p class="lg:opacity-0 lg:h-0 lg:w-[400px] mt-12 mb-6 text-neutral-900 text-white font-light leading-tight group-hover:opacity-100 group-hover:h-auto transition-all duration-300 ease-in">
                                                {slide.description}
                                            </p>
                                        </div>
                                        <button class="lg:opacity-0 h-0 group-hover:opacity-100 group-hover:h-6 text-white text-base font-medium font-['Objectivity'] leading-normal transition-all duration-400 ease-in">Zobacz więcej</button>
                                    </div>
                                </div>
                            </div>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="bg-[#e9e9e9] lg:py-24">
    <div class="w-full  p-12 mx-auto max-w-[1400px] relative">
        <!-- Progress Text -->
        <div class="progress-bar">
            <div class="progress-bar__fill"></div>
        </div>
        <div class="custom-controls">
            <div class="progress-text">
                <span class="current-slide">1</span> / <span class="total-slides">5</span>
            </div>
            <button class="splide-next"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g id="Frame">
                    <path id="Vector" d="M3.33789 7C5.06694 4.01099 8.29866 2 12.0001 2C17.5229 2 22.0001 6.47715 22.0001 12C22.0001 17.5228 17.5229 22 12.0001 22C8.29866 22 5.06694 19.989 3.33789 17M12 16L16 12M16 12L12 8M16 12H2" stroke="#A3A3A3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </g>
            </svg>
            </button>
        </div>
    </div>
</section>
