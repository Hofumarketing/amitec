                       </div>
                   </div>
               </div>
            </div>
            <div class="w-full lg:w-1/2">
                <img src="public/img/s1.png">

            </div>
        </div>
    </section>

    <!--zastosowanie-->
    <section class="p-6">
        <div class="mx-auto w-full max-w-[1440px] border-b border-[#d1d1d1] pb-6">
            <h2 class="text-[#2e2e2e] text-2xl font-medium font-['Objectivity']">Zastosowanie</h2>
            <div class="lg:columns-2 w-full lg:w-3/4">
                {kategorie.map((slide, index) => (
                        <li  class="text-[#707070] max-w-3/4 text-base py-3 font-light font-['Objectivity'] leading-none">{slide.title}</li>
                ))}
            </div>
        </div>
    </section>
    <!--parametry-->
    <section class="py-12 p-6">
        <div class="mx-auto w-full max-w-[1440px]">
            <h2 class="text-[#2e2e2e] text-2xl font-medium font-['Objectivity']">Parametry</h2>
            <div class="columns-1 w-full lg:w-3/4">
                {kategorie.map((slide, index) => (
                        <div class="w-full flex justify-between border-b border-[#d1d1d1] py-2" >
                            <ol  class="w-1/2 text-[#707070] max-w-3/4 text-base py-3 font-light font-['Objectivity'] leading-none">{slide.parametry}</ol>

                            <ol  class="w-1/2 text-right text-[#242424] max-w-3/4 text-base py-3 font-light font-['Objectivity'] leading-none">{slide.wartosc}</ol>
                        </div>
                ))}
