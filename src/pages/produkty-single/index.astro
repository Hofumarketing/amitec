<Page>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nav = document.querySelector('nav');
            nav.classList.add('nav-scrolled');
        });
    </script>



    <section class="pt-24">
        <div id="product_header" class="py-24 flex flex-wrap mx-auto w-full max-w-[1440px]">
            <div class="w-full lg:w-1/2 flex items-center">
               <div class="p-6">
                   <h1 class="text-[#2e2e2e] break-all py-2 text-3xl lg:text-5xl font-medium font-['Objectivity'] leading-10">AMITEC FASADA 045</h1>
                   <p class="text-[#2e2e2e] py-2 text-base font-medium font-['Objectivity']">EN 13163 : 2012 + A1 : 2015 - 03</p>
                   <p class="text-[#2e2e2e] py-2 break-words text-base font-light font-['Objectivity']">EPS-EN 13163 T2-L3-W3-Sb 5-P15-BS50-DS(N)5-DS(70,-)3-TR80</p>
                   <img class="py-2" src="public/img/ico23.svg">
                   <div class="flex py-12 justify-start gap-x-2 lg:gap-x-10">
                       <div class="h-12 lg:px-6 px-2 py-4 bg-[#ff0009] rounded justify-start items-center lg:gap-2.5 inline-flex">
                           <div class="text-white text-sm lg:text-base font-medium font-['Objectivity']">Zamów produkt</div>
                       </div>
                       <div class="h-12 lg:px-6 px-2 py-4 rounded border border-[#2e2e2e] justify-start items-center lg:gap-2.5 inline-flex">
