    <script>
        // Funkcja do uruchomienia animacji po pojawieniu się sekcji na ekranie
        const handleOnScreen = (entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Usuwamy klasę -mr-52, gdy sekcja jest widoczna
                    onasBlocks.classList.remove('lg:-mr-52');
                    onasBlocks.classList.add('mr-20');

                }
            });
        };

        // Konfiguracja IntersectionObserver
        const observer = new IntersectionObserver(handleOnScreen, {
            threshold: 0.5
        });

        // Selekcja elementu sekcji
        const onasBlocks = document.getElementById('onas_blocks');

        // Funkcja uruchamiająca animację tylko na ekranach powyżej 999px szerokości
        const initAnimation = () => {
            if (window.innerWidth > 999) {
                observer.observe(onasBlocks); // Obserwacja sekcji
            }
        };

        // Uruchom funkcję po załadowaniu strony
        window.addEventListener('load', initAnimation);

        // Opcjonalnie: nasłuchuj zmian rozmiaru okna i uruchamiaj ponownie skrypt
        window.addEventListener('resize', () => {
            if (window.innerWidth > 999) {
                observer.observe(onasBlocks);
            } else {
                observer.unobserve(onasBlocks); // Przestaje obserwować na mniejszych ekranach
            }
        });


    </script>

